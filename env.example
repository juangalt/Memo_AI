# Memo AI Coach - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Required Variables (must be set)
LLM_API_KEY=your-llm-api-key-here
SECRET_KEY=your-secret-key-here
ADMIN_PASSWORD=your-secure-admin-password-here

# Optional Variables (have defaults)
APP_ENV=production
DEBUG_MODE=false
LOG_LEVEL=INFO
DATABASE_URL=sqlite:///data/memoai.db
LLM_PROVIDER=claude
LLM_MODEL=claude-3-sonnet-20240229
LLM_TIMEOUT=30
SESSION_TIMEOUT=3600
MAX_CONCURRENT_USERS=100

# Rate Limiting Configuration
RATE_LIMIT_PER_SESSION=20
RATE_LIMIT_PER_HOUR=1000

# Traefik Configuration (optional for production)
DOMAIN=your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# Database Configuration
DATABASE_WAL_MODE=true
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_RETENTION=28

# Security Configuration
CSRF_PROTECTION=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# Development Variables (for development environment)
# APP_ENV=development
# DEBUG_MODE=true
# LOG_LEVEL=DEBUG
# RATE_LIMITING=false
# SECURE_COOKIES=false
