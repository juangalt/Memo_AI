# Production Environment Configuration
# Copy this file to .env and configure for your environment

# Domain Configuration
DOMAIN=your-subdomain.com
ADMIN_EMAIL=admin@your-domain.com

# Application Configuration
APP_ENV=production
DEBUG_MODE=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///data/memoai.db

# LLM Configuration
LLM_API_KEY=your-anthropic-api-key-here
LLM_PROVIDER=claude
LLM_MODEL=claude-3-sonnet-20240229
LLM_TIMEOUT=30

# Security Configuration
# Note: Session tokens use Python's secrets module (no SECRET_KEY required)
# Optional: Only used during database initialization (default: admin123)
ADMIN_PASSWORD=your-secure-admin-password-here
SESSION_TIMEOUT=3600

# Performance Configuration
MAX_CONCURRENT_USERS=100
RATE_LIMIT_PER_SESSION=20
RATE_LIMIT_PER_HOUR=1000

# SSL Configuration (automatically managed by Let's Encrypt)
SSL_CERT_PATH=/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/letsencrypt/live/your-domain.com/privkey.pem
